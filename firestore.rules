rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if user is admin
    // IMPORTANT: This function reads the user's own document, which should always be allowed
    function isAdmin() {
      return isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        (
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
          (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles is list &&
           get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny(['admin']))
        );
    }

    // Top-level listing collection rules
    match /listing/{listingId} {
      // Anyone can read listings, admins can read all
      allow read: if true;
      
      // Only signed-in users can create listings (must be the host)
      allow create: if isSignedIn() && 
        request.resource.data.hostId == request.auth.uid;
      
      // Only the host who owns the listing can update it, or admin
      allow update: if isSignedIn() && (
        (request.resource.data.hostId == request.auth.uid &&
         resource.data.hostId == request.auth.uid) ||
        isAdmin()
      );
      
      // Only the host who owns the listing can delete it, or admin
      allow delete: if isSignedIn() && (
        resource.data.hostId == request.auth.uid ||
        isAdmin()
      );
    }

    // Top-level bookings collection
    match /bookings/{bookingId} {
      // Allow read for involved users OR admin
      // Also allow reading confirmed and pending bookings for availability checking (by listingId)
      // CRITICAL: Guests and hosts must be able to read cancelled bookings for refund processing
      // This is needed to prevent duplicate/overlapping bookings
      allow read: if isSignedIn() && (
        resource.data.guestId == request.auth.uid ||                             
        resource.data.hostId == request.auth.uid ||
        isAdmin() ||
        ((resource.data.status == 'confirmed' || resource.data.status == 'pending') && resource.data.listingId != null)
      );
      // Allow list/query for bookings where user is involved
      // Also allow querying confirmed and pending bookings by listingId for availability checking
      // This is needed to prevent duplicate/overlapping bookings
      allow list: if isSignedIn() && (
        resource.data.guestId == request.auth.uid ||
        resource.data.hostId == request.auth.uid ||
        isAdmin() ||
        ((resource.data.status == 'confirmed' || resource.data.status == 'pending') && resource.data.listingId != null)
      );
      allow create: if isSignedIn() && request.resource.data.guestId == request.auth.uid;
      // Allow update for guests and hosts, including refund processing updates
      // CRITICAL: Guests must be able to update their cancelled bookings with refund fields
      // This allows guests to update refundStatus, refundAmount, refundedAt during refund processing
      allow update: if isSignedIn() && (
        request.auth.uid == resource.data.guestId ||
        request.auth.uid == resource.data.hostId ||
        isAdmin()
      );
      allow delete: if isSignedIn() && (
        request.auth.uid == resource.data.guestId ||
        request.auth.uid == resource.data.hostId ||
        isAdmin()
      );
    }

    // Top-level messages collection
    match /messages/{messageId} {
      // Allow read for individual messages where user is sender or receiver
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.senderId ||
        request.auth.uid == resource.data.receiverId
      );
      // Allow list/query for messages where user is sender or receiver
      allow list: if isSignedIn() && (
        resource.data.senderId == request.auth.uid ||
        resource.data.receiverId == request.auth.uid
      );
      allow create: if isSignedIn() && request.resource.data.senderId == request.auth.uid;
      // Allow sender to update/delete their own messages, or receiver to mark messages as read
      allow update: if isSignedIn() && (
        resource.data.senderId == request.auth.uid ||
        (resource.data.receiverId == request.auth.uid &&
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read']) &&
         request.resource.data.read == true)
      );
      allow delete: if isSignedIn() && resource.data.senderId == request.auth.uid;
    }

    // Top-level transactions collection
    match /transactions/{transactionId} {
      // Users can read their own transactions, admins can read all
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.userId ||
        isAdmin()
      );
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    // Helpers to check conversation participants for users and hosts
    function userConvHasParticipant(userId, convId) {
      return exists(/databases/$(database)/documents/users/$(userId)/conversations/$(convId)) &&
        get(/databases/$(database)/documents/users/$(userId)/conversations/$(convId)).data.participants.hasAny([request.auth.uid]);
    }

    function hostConvHasParticipant(hostId, convId) {
      return exists(/databases/$(database)/documents/hosts/$(hostId)/conversations/$(convId)) &&
        get(/databases/$(database)/documents/hosts/$(hostId)/conversations/$(convId)).data.participants.hasAny([request.auth.uid]);
    }

    // Users collection - users control their own document, admins can read all
    // Allow authenticated users to read user documents (needed for hosts to send booking emails to guests)
    match /users/{userId} {
      // Allow read for: own document, admins, or any authenticated user (for booking emails, etc.)
      allow read: if isSignedIn();
      
      // Allow list/query for password reset (querying by email)
      // This is needed to fetch user profile by email for password reset emails
      allow list: if isSignedIn();
      
      // Allow create: users can create their own document
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      
      // Allow update: own document, payment processing, multi-role management, host points, or refunds
      allow update: if isSignedIn() && (
        // Users can always update their own document (for profile updates, multi-role registration, admin PayPal linking, etc.)
        request.auth.uid == userId ||
        // CRITICAL: Allow refund processing - ANY authenticated user can update ANY user's walletBalance for refunds
        // This is needed for guests to credit their own wallet and deduct from host's wallet during cancellation
        // This rule MUST be simple and come early to ensure refunds work in transactions
        // CRITICAL: Allow walletBalance updates for refunds - allow ANY authenticated user to update ANY user's walletBalance
        // if ONLY walletBalance is being changed (no other fields) - this covers guest crediting self and deducting from host
        // This works even if old walletBalance doesn't exist (new user) or is negative (debt tracking)
        // SIMPLIFIED: Just check if only walletBalance is changed and it's a number - allow for refunds
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['walletBalance']) &&
         request.resource.data.walletBalance is number) ||
        // Allow updating coupons only (for coupon restoration during refunds)
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['coupons']) &&
         request.resource.data.coupons is list) ||
        // Allow updating walletBalance and coupons together (for refunds that restore coupons)
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['walletBalance', 'coupons']) &&
         request.resource.data.walletBalance is number &&
         request.resource.data.coupons is list) ||
        // Allow users to update their own walletBalance for deposits (top-ups) or withdrawals
        // Users can increase balance for deposits, or decrease for withdrawals
        (request.auth.uid == userId &&
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['walletBalance']) &&
         request.resource.data.walletBalance is number &&
         request.resource.data.walletBalance >= 0) ||
        // Allow payment processing: host can update guest's walletBalance, points, and coupons when processing booking payment
        // This is needed for the payment service to deduct from guest wallet, credit host wallet, award points, and mark coupons as used
        // Check that only payment-related fields are being updated (allow any combination of these fields)
        ((request.resource.data.diff(resource.data).affectedKeys().hasOnly(['points']) &&
          request.resource.data.points is number) ||
         (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['walletBalance', 'points']) &&
          request.resource.data.walletBalance is number &&
          request.resource.data.points is number) ||
         (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['walletBalance', 'coupons']) &&
          request.resource.data.walletBalance is number &&
          request.resource.data.coupons is list) ||
         (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['points', 'coupons']) &&
          request.resource.data.points is number &&
          request.resource.data.coupons is list) ||
         (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['walletBalance', 'points', 'coupons']) &&
          request.resource.data.walletBalance is number &&
          request.resource.data.points is number &&
          request.resource.data.coupons is list)) ||
        // Allow updating hostPoints when awarding points for reviews, bookings, or listing approvals
        // Only allow updating hostPoints field (and ensure it's a number)
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['hostPoints']) &&
         request.resource.data.hostPoints is number &&
         request.resource.data.hostPoints >= 0) ||
        // Allow updating hostPoints and walletBalance together when redeeming points for e-wallet
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['hostPoints', 'walletBalance']) &&
         request.resource.data.hostPoints is number &&
         request.resource.data.hostPoints >= 0 &&
         request.resource.data.walletBalance is number &&
         request.resource.data.walletBalance >= 0) ||
        // Allow updating host-specific data fields (hostFavorites, hostWishlist)
        // This is needed when users interact with listings as host
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['hostFavorites']) ||
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['hostWishlist']) ||
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['hostFavorites', 'hostWishlist']))
      );

      // Conversations under a user
      match /conversations/{convId} {
        allow read: if isSignedIn() && (
          request.auth.uid == userId || userConvHasParticipant(userId, convId)
        );

        allow create, update: if isSignedIn() && (
          request.auth.uid == userId ||
          (request.resource.data.participants is list && request.resource.data.participants.hasAny([request.auth.uid])) ||
          userConvHasParticipant(userId, convId)
        );

        allow delete: if isSignedIn() && request.auth.uid == userId;

        match /messages/{messageId} {
          allow read: if isSignedIn() && (
            request.auth.uid == userId || userConvHasParticipant(userId, convId)
          );

          allow create: if isSignedIn() && (
            request.resource.data.from == request.auth.uid &&
            (request.auth.uid == userId || userConvHasParticipant(userId, convId))
          );

          allow update, delete: if isSignedIn() && resource.data.from == request.auth.uid;
        }
      }
    }

    // Hosts collection - hosts control their data
    match /hosts/{hostId} {
      // listings
      match /listings/{listingId} {
        allow read: if true;
        allow write: if isSignedIn() && request.auth.uid == hostId;
      }

      // bookings under a host
      match /bookings/{bookingId} {
        allow read: if isSignedIn() && (
          request.auth.uid == hostId ||
          (resource.data.guestId == request.auth.uid) ||
          (request.resource.data.guestId == request.auth.uid)
        );

        allow create: if isSignedIn() && request.auth.uid == request.resource.data.guestId;
        allow update: if isSignedIn() && (
          request.auth.uid == hostId || (resource.data.guestId == request.auth.uid)
        );
        allow delete: if isSignedIn() && (
          request.auth.uid == hostId || (resource.data.guestId == request.auth.uid)
        );
      }

      // draft listings (hosts only)
      match /drafts/{draftId} {
        allow read, write: if isSignedIn() && request.auth.uid == hostId;
      }

      // host-side conversations and messages
      match /conversations/{convId} {
        allow read: if isSignedIn() && (
          request.auth.uid == hostId || hostConvHasParticipant(hostId, convId)
        );

        allow create, update: if isSignedIn() && (
          request.auth.uid == hostId ||
          (request.resource.data.participants is list && request.resource.data.participants.hasAny([request.auth.uid])) ||
          hostConvHasParticipant(hostId, convId)
        );

        allow delete: if isSignedIn() && request.auth.uid == hostId;

        match /messages/{messageId} {
          allow read: if isSignedIn() && (
            request.auth.uid == hostId || hostConvHasParticipant(hostId, convId)
          );

          allow create: if isSignedIn() && (
            request.resource.data.from == request.auth.uid &&
            (request.auth.uid == hostId || hostConvHasParticipant(hostId, convId))
          );

          allow update, delete: if isSignedIn() && resource.data.from == request.auth.uid;
        }
      }
    }

    // Reviews (authenticated users)
    match /reviews/{reviewId} {
      // Anyone signed in can read reviews, admins can read all
      allow read: if isSignedIn();
      // Guests can create reviews for their bookings
      allow create: if isSignedIn() && request.resource.data.guestId == request.auth.uid;
      // Guests can update/delete their own reviews, or admin
      allow update: if isSignedIn() && (
        resource.data.guestId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isSignedIn() && (
        resource.data.guestId == request.auth.uid ||
        isAdmin()
      );
    }

    // Admin-only analytics
    match /analytics/{document=**} {
      allow read, write: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // OTP collection - for email verification
    match /otps/{otpId} {
      // Users can create OTPs for themselves
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // Users can read their own unverified OTPs
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid && resource.data.verified == false;
      
      // Users can update their own OTPs (mark as verified)
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Users can delete their own OTPs
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Transactions collection
    match /transactions/{transactionId} {
      // Users can read their own transactions, admins can read all
      allow read: if isSignedIn() && (
        resource.data.userId == request.auth.uid || 
        isAdmin()
      );
      
      // Allow list/query for transactions
      // Users can query their own transactions, or query by bookingId (for payment/refund checks)
      // This allows guests to query payment transactions for their bookings during refund processing
      allow list: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      
      // Users can create their own transactions, or hosts can create transactions for payment processing
      allow create: if isSignedIn() && (
        request.resource.data.userId == request.auth.uid ||
        // Allow users to create deposit transactions for wallet top-ups
        (request.resource.data.userId == request.auth.uid &&
         request.resource.data.type == 'deposit' &&
         request.resource.data.status == 'completed' &&
         request.resource.data.amount is number &&
         request.resource.data.amount > 0 &&
         request.resource.data.paymentMethod == 'paypal') ||
        // Allow users to create withdrawal transactions (status will be 'pending' until admin processes)
        (request.resource.data.userId == request.auth.uid &&
         request.resource.data.type == 'withdrawal' &&
         request.resource.data.status == 'pending' &&
         request.resource.data.amount is number &&
         request.resource.data.amount > 0 &&
         request.resource.data.paymentMethod == 'paypal') ||
        // Allow hosts to create transactions for guests when processing booking payments
        // This is needed for the payment service to create payment, deposit, and reward transactions
        (request.resource.data.bookingId != null &&
         request.resource.data.type in ['payment', 'deposit', 'reward'] &&
         request.resource.data.status == 'completed') ||
        // Allow creating refund transactions when bookingId is present (for booking refunds)
        // This allows guests to create refund transactions for themselves when cancelling bookings
        (request.resource.data.bookingId != null &&
         request.resource.data.type == 'refund' &&
         request.resource.data.status == 'completed') ||
        // Allow creating withdrawal transactions for other users during refund processing
        // This allows guests/hosts to create withdrawal records for each other during booking refunds
        (request.resource.data.bookingId != null &&
         request.resource.data.type == 'withdrawal' &&
         request.resource.data.status == 'completed') ||
        // Allow creating reward transactions for hosts when awarding host points (for reviews, bookings, listing approvals)
        // This allows guests to create reward transactions for hosts when submitting reviews
        (request.resource.data.type == 'reward' &&
         request.resource.data.status == 'completed' &&
         request.resource.data.amount is number &&
         request.resource.data.amount > 0)
      );
      
      // Only admins can update transactions (e.g., confirm, refund)
      allow update: if isAdmin();
      
      // Only admins can delete transactions
      allow delete: if isAdmin();
    }

    // Notifications collection
    match /notifications/{notificationId} {
      // Users can read their own notifications
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Any authenticated user can create notifications (needed for messages, bookings, listings)
      // This allows: senders to notify receivers, hosts to notify guests, admins to notify hosts, etc.
      // Security is maintained because users can only READ their own notifications
      allow create: if isSignedIn();
      
      // Users can update their own notifications (mark as read, delete)
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Users can delete their own notifications
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Allow list/query for user's notifications
      allow list: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Subscriptions collection - for host billing/subscription system
    match /subscriptions/{subscriptionId} {
      // Users can read their own subscriptions, admins can read all
      allow read: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      
      // Users can create their own subscriptions (when paying)
      allow create: if isSignedIn() && 
        request.resource.data.userId == request.auth.uid;
      
      // Users can update their own subscriptions (renew, cancel), admins can update any
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      
      // Users can delete their own subscriptions, admins can delete any
      allow delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      
      // Allow list/query for user's subscriptions or admins can list all
      allow list: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
    }

    // Admin settings collection
    match /adminSettings/{settingId} {
      // Allow authenticated users to read PayPal email for wallet top-ups
      // Only allow reading the paypal document
      // This is needed for guests/hosts to get admin PayPal email when making deposits
      allow read: if isSignedIn() && settingId == 'paypal';
      
      // Allow list/query for authenticated users (needed to query adminSettings/paypal)
      allow list: if isSignedIn();
      
      // Only admins can write admin settings
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Platform events collection

    match /events/{eventId} {
      // Admins can read and write all events
      allow read, write: if isAdmin();
      
      // Users can read active events that target their roles
      allow read: if isSignedIn() && 
        resource.data.status == 'active' &&
        (
          // Check if user's role is in targetRoles
          (resource.data.targetRoles is list && 
           resource.data.targetRoles.hasAny([get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role])) ||
          (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles is list &&
           resource.data.targetRoles is list &&
           resource.data.targetRoles.hasAny(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles))
        );
    }

    // Refund logs collection (audit trail)
    match /refundLogs/{refundLogId} {
      // Admins can read all refund logs
      allow read: if isAdmin();
      
      // Users can read their own refund logs (as guest or host)
      // This allows reading individual documents by ID
      allow read: if isSignedIn() && 
        (resource.data.guestId == request.auth.uid || 
         resource.data.hostId == request.auth.uid);
      
      // Allow list/query for refund logs
      // CRITICAL: Allow all authenticated users to query refund logs
      // Security is maintained because:
      // 1. The query filters by guestId/hostId matching the user's UID
      // 2. Users can only see results where they are the guest or host (enforced by where clauses)
      // 3. Individual document reads still require guestId/hostId matching (allow read rule above)
      // This is needed because Firestore list rules are evaluated at query time, not on each result
      // The actual data filtering happens via the where() clauses in the query
      allow list: if isSignedIn();
      
      // Allow creation of refund logs for authenticated users
      // Validation ensures only valid refunds create logs
      allow create: if isSignedIn() && 
        (request.resource.data.guestId == request.auth.uid || 
         request.resource.data.hostId == request.auth.uid ||
         isAdmin());
      
      // No updates or deletes allowed (immutable audit trail)
      allow update: if false;
      allow delete: if false;
    }

    // Cancellation requests collection
    match /cancellationRequests/{requestId} {
      // Admins can read all cancellation requests
      allow read: if isAdmin();
      
      // Guests can read their own cancellation requests
      allow read: if isSignedIn() && 
        resource.data.guestId == request.auth.uid;
      
      // Hosts can read cancellation requests for their bookings
      allow read: if isSignedIn() && 
        resource.data.hostId == request.auth.uid;
      
      // Allow list/query for guests, hosts, and admins
      allow list: if isSignedIn() && (
        resource.data.guestId == request.auth.uid ||
        resource.data.hostId == request.auth.uid ||
        isAdmin()
      );
      
      // Guests can create cancellation requests for their own bookings
      allow create: if isSignedIn() && 
        request.resource.data.guestId == request.auth.uid &&
        request.resource.data.bookingId != null &&
        request.resource.data.listingId != null &&
        request.resource.data.hostId != null &&
        request.resource.data.status == 'pending';
      
      // Only admins can update cancellation requests (approve/reject)
      allow update: if isAdmin();
      
      // No deletes allowed (immutable audit trail)
      allow delete: if false;
    }
  }
}